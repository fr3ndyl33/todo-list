html
    head
        block title
            title Hello, Jade!
        link(rel="stylesheet", href="/styles/bootstrap.min.css")
        link(rel="stylesheet", href="/styles/main.css")
        link(rel="stylesheet", href="/styles/todolist.css")

        block moreStyle
    body
        header#main-header
            nav#main-nav(role="navigation")
                a#logo(href="/") BlogEngine
                ul.horizontal-menu
                    li.menu-item: a(href="/about") About                    

        #main-container
            div.row
                div.col-md-6
                    div.todolist.not-done
                        h1 Todos
                        input.form-control.add-todo(type="text", placeholder="Add Todo")
                        button#checkAll.btn.btn-success Mark All as done
                        hr
                        ul#sortable.list-unstyled
                        div.todo-footer
                            strong
                                span.count-todos
                            |  Items Left

        script(type="text/javascript", src="/script/jquery.min.js")
        script(type="text/javascript", src="/script/jquery-ui.min.js")
        script(type="text/javascript", src="/script/bootstrap.min.js")        
        script(type="text/javascript", src="/script/todo.js")

        footer#main-footer
            aside
                h4 Links
                ul.veritcal-menu
                    li.menu-item: a(href="/") Satu
                    li.menu-item: a(href="/") Dua
                    li.menu-item: a(href="/") Tiga
            aside#copyright
                p &copy; Someone 2015
